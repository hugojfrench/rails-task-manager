<h1>Task List:</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to "#{task.title}", task_path(task) %> <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
      <i class="fa-solid fa-trash"></i>
    <% end %></li>
  <% end %>
</ul>

<h2><%= link_to "Add a new task", tasks_new_path %></h2>
